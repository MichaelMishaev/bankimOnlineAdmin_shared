{
  "name": "bankim-management-portal",
  "version": "1.0.0",
  "private": true,
  "description": "BankIM Management Portal - Monorepo with client, server, and shared packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "push:all": "./scripts/push-all-repos.sh",
    "push:client": "cd packages/client && ./scripts/push-client.sh",
    "push:server": "cd packages/server && ./scripts/push-server.sh",
    "push:shared": "cd packages/shared && ./scripts/publish.sh",
    "push:dry-run": "./scripts/push-all-repos.sh --dry-run",
    "sync": "./scripts/push-all-repos.sh -m 'Automated sync'",
    "deploy:all": "npm run build && npm run push:all"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "BankIM Development Team",
  "license": "MIT"
}
