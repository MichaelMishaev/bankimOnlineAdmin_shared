# Backend Environment Configuration
# BankIM Management Portal - API Server

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Core Database (bankim_core) - Contains core business operations, calculator formulas, admin users, permissions
CORE_DATABASE_URL=postgresql://username:password@host:port/database

# Content Database (bankim_content) - Contains UI content and translations
CONTENT_DATABASE_URL=postgresql://username:password@host:port/database

# Management Database (bankim_management) - Contains management portal specific data
MANAGEMENT_DATABASE_URL=postgresql://username:password@host:port/database

# Legacy Railway Database (for backward compatibility)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Development Options
USE_LOCAL_DB=false
API_BASE_URL=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3002

